pipeline {
    agent any
    environment {
        name = "hiren"
    }
    parameters {
        string(name: 'person',defaultValue: 'hiren patel',description: "who are you")
        booleanParam(name: 'patidar',defaultValue: 'true',description: "")
        choice(name: 'city',choices: ['abad','su.nagar','surat'],description: "")
    }
    stages {
        stage('Run A command') {
            steps {
               sh '''
               ls
               date
               pwd
               cal 2022
               '''
            }
            
        }
        stage('Environment Variables') {
            environment {
                username = 'hiren'
            }
            steps {
                sh 'echo   "${BUILD_ID}"'
                sh 'echo   "${name}"'    
                sh 'echo   "${username}"' 
                
            }
        }
        stage('parameters') {
            steps {
                echo 'Hello World'
                sh 'echo "${name}"'
                sh 'echo   "${person}"' 
            }
            
        }
        stage('continue ?') {
            input {
                message "should we continue?"
                ok "moj we should"
            }
        
            steps {
                echo 'deploy on prod'
            }
        }
        stage('Deploy on prod') {    
            steps {
                echo 'deploy on prod'
            }
        }
    }
        post{
            always { 
            echo 'I will always say Hello again!'
        
            }
        
            failure{
                echo 'Failure'    
            }
            success{
            
                echo 'Successs!'
            }
            
        }
    
}
